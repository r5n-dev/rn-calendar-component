{
  "name": "@versum/rn-calendar",
  "description": "React-Native Calendar",
  "version": "0.1.4",
  "license": "MIT",
  "author": "Damian Sznajder <damsznajder@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/versum/rn-calendar.git"
  },
  "main": "lib/commonjs/index.js",
  "react-native": "src/index.tsx",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "scripts": {
    "bootstrap": "yarn install && yarn example install && yarn docs install",
    "coverage": "open ./coverage/lcov-report/index.html",
    "docs": "yarn --cwd docs",
    "example": "yarn --cwd Example",
    "lint": "eslint --ext '.js,.ts,.tsx' .",
    "prepare": "bob build",
    "release": "release-it --ci",
    "test": "jest --coverage --runInBand",
    "test:watch": "jest --watch",
    "typescript": "tsc --noEmit"
  },
  "files": [
    "src",
    "lib"
  ],
  "devDependencies": {
    "@commitlint/config-conventional": "8.2.0",
    "@expo/react-native-action-sheet": "3.4.1",
    "@react-native-community/bob": "0.7.0",
    "@release-it/conventional-changelog": "1.1.0",
    "@types/react": "16.9.17",
    "@types/react-native": "0.60.25",
    "babel-jest": "24.9.0",
    "commitlint": "8.2.0",
    "eslint": "6.7.2",
    "eslint-config-satya164": "3.1.5",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "prettier": "1.19.1",
    "react": "16.9.0",
    "react-native": "0.61.5",
    "react-native-web": "0.11.7",
    "release-it": "12.4.3",
    "typescript": "3.7.3"
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native)"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ]
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn typescript",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
