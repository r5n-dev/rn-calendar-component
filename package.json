{
  "name": "rn-calendar-component",
  "description": "React-Native Calendar",
  "version": "0.4.4",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.tsx",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!lib/typescript/example"
  ],
  "scripts": {
    "bootstrap": "yarn example && yarn && husky install",
    "docs:build": "rm -rf .docz/ docs/ lib/ && yarn docz build",
    "docs:dev": "rm -rf .docz/ docs/ && yarn docz dev",
    "example": "yarn --cwd Example",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepare": "bob build",
    "release": "release-it --ci",
    "test": "jest --coverage --runInBand && yarn coverage",
    "coverage": "jest-coverage-badges ./coverage/coverage-summary.json --output ./badges",
    "test:watch": "jest --watch",
    "typescript": "tsc --noEmit"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "react-native-calendar",
    "rn-calendar-component"
  ],
  "repository": "https://github.com/dsznajder/rn-calendar",
  "author": "Damian Sznajder <damsznajder@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@babel/preset-typescript": "7.14.5",
    "@commitlint/config-conventional": "12.1.4",
    "@release-it/conventional-changelog": "3.0.1",
    "@types/jest": "26.0.23",
    "@types/react": "17.0.11",
    "@types/react-native": "0.64.10",
    "babel-jest": "27.0.2",
    "commitlint": "12.1.4",
    "docz": "2.3.1",
    "eslint": "7.28.0",
    "eslint-config-satya164": "3.1.10",
    "husky": "6.0.0",
    "jest": "27.0.4",
    "jest-coverage-badges": "1.1.2",
    "prettier": "2.3.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-native": "0.64.2",
    "react-native-builder-bob": "0.18.1",
    "react-native-testing-library": "6.0.0",
    "react-native-web": "0.16.5",
    "react-test-renderer": "17.0.2",
    "release-it": "14.9.0",
    "typescript": "4.3.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/Example/node_modules",
      "<rootDir>/lib/",
      "<rootDir>/.docz/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native)"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "parser": "typescript",
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
